@model List<ContactAppMVCApp.Models.User>

@{ 
    var sessionTimerInSeconds = (Session.Timeout * 60)-5;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminView</title>
    <style>
      
    </style>
    <meta http-equiv="refresh" content="@sessionTimerInSeconds;url = @Url.Action("LoginPage")" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
</head>
<body>
    <h2 class="display-3 text-center">User List</h2><hr />
    <div>
        <table class="table table-striped table-hover">
            <tr>
                <th>UserId</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>IsAdmin</th>
                <th>IsActive</th>
                <th>Operations</th>

            </tr>

            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.IsAdmin</td>
                    <td>@user.IsActive</td>
                    <td>
                    @Html.ActionLink("Edit User","EditUser",new {id=user.UserId})
                    @Html.ActionLink("Delete User","DeleteUser",new {id=user.UserId})
                    </td>
                </tr>
            }

        </table>
        <div>
            @Html.ActionLink("Create User", "CreateUser")<br/>
        </div>
        <div>
            @Html.ActionLink("LogOut","LoginPage")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
